// This is the Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Define the PostgreSQL data source
datasource db {
  provider = "postgresql"
  // זו השורה החיונית לגרסה 6.x: קוראת את משתנה הסביבה
  url      = env("DATABASE_URL")
}

// User Model (Tasks 2, 4)
model User {
  id        String   @id @default(uuid()) // Use UUID as the primary identifier
  email     String   @unique
  password  String // Hashed password using bcrypt
  firstName String?
  lastName  String?
  // One-to-many relationship: One User owns multiple Clothes
  clothes   Clothe[]
  outfits   Outfit[]
  tags      Tag[] // User's custom tags
  posts     Post[] // User's social feed posts
  trips     TripPlan[] // User's packing lists for trips
}

// Clothing Item Model (Task 3)
model Clothe {
  id        String   @id @default(uuid())
  userId    String
  name      String
  category  String
  color     String
  imageUrl  String
  createdAt DateTime @default(now())
  season    String?
  occasion  String?
  notes     String?
  // ----------------------------------------

  // Relationship: Clothe belongs to a specific User
  user User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  // Many-to-many relationship: Clothe can have multiple Tags
  tags ClotheTag[]
  @@index([userId])
  @@index([category])
  @@index([createdAt])
}

// Tag Model - for organizing clothes
model Tag {
  id        String   @id @default(uuid())
  name      String
  userId    String? // null = system tag, userId = user's custom tag
  createdAt DateTime @default(now())

  // Relationships
  user    User?       @relation(fields: [userId], references: [id], onDelete: Cascade)
  clothes ClotheTag[]
}

// Junction table for many-to-many relationship between Clothe and Tag
model ClotheTag {
  id       String @id @default(uuid())
  clotheId String
  tagId    String

  clothe Clothe @relation(fields: [clotheId], references: [id], onDelete: Cascade)
  tag    Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([clotheId, tagId]) // Prevent duplicate tag assignments
}

// Outfit Model (for saving favorite looks)
model Outfit {
  id        String   @id @default(uuid())
  userId    String
  name      String
  // Array of Clothe IDs that compose the outfit
  clotheIds String[]
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Post Model (Social Feed)
model Post {
  id        String   @id @default(uuid())
  userId    String
  imageUrl  String
  caption   String
  isPublic  Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([userId])
  @@index([isPublic])
  @@index([createdAt])
  @@index([isPublic, createdAt])
}

// Trip Plan Model (Smart Packing List)
model TripPlan {
  id           String   @id @default(uuid())
  userId       String
  destination  String
  startDate    DateTime
  endDate      DateTime
  activities   String[] // Array of activities (Hiking, Beach, Business, etc.)
  packingStyle String   // Minimalist, Standard, Extended
  weatherData  Json?    // Store weather forecast as JSON
  createdAt    DateTime @default(now())

  user         User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  packingItems PackingListItem[]

  @@index([userId])
  @@index([createdAt])
}

// Packing List Item Model
model PackingListItem {
  id         String   @id @default(uuid())
  tripId     String
  category   String   // Tops, Bottoms, Shoes, Accessories, Toiletries
  name       String
  quantity   Int      @default(1)
  isOwned    Boolean  @default(false) // true = user owns it, false = recommended to buy/borrow
  clotheId   String?  // If owned, reference to the actual clothe item
  suggestion String?  // AI suggestion for missing items
  isPacked   Boolean  @default(false) // User can mark items as packed

  trip TripPlan @relation(fields: [tripId], references: [id], onDelete: Cascade)

  @@index([tripId])
}
